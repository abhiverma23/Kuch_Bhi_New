<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.etechclub.kuchbhi.ControlPanel">

    <TextView
        android:id="@+id/connect_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="34dp"
        android:background="@android:color/holo_red_dark"
        android:gravity="center"
        android:text="Not Connected"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="8dp"
            android:layout_weight="0"
            android:scaleType="fitCenter"
            android:src="@drawable/power_socket" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:text="Switch 1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:clickable="true"
            android:onClick="toggleSwitch1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:id="@+id/toggle_text_switch1"
                android:text="off"
                android:textAllCaps="true"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/toggle_button_switch1"
                android:layout_gravity="center_vertical"
                android:layout_margin="8dp"
                android:layout_weight="0"
                android:src="@android:drawable/button_onoff_indicator_off" />
        </LinearLayout>

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="8dp"
            android:layout_weight="0"
            android:src="@drawable/clock" />
    </LinearLayout>
</LinearLayout>
